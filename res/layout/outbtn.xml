<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageButton
        android:id="@+id/bkgBtn1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/outBtn"
        android:layout_alignTop="@+id/outBtn"
        android:background="#40000000" 
        android:onClick="onExitClicked"
        android:contentDescription="@string/bkgBtn"
        />

    <Button
        android:id="@+id/outContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:background="#00000000"
        android:text="@string/exit"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:onClick="onExitClicked" />

    <Button
        android:id="@+id/outBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/outContent"
        android:onClick="onExitClicked"
        android:background="@drawable/back_ic"/>

</RelativeLayout>